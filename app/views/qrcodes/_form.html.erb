<%= form_for @qrcode, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :question, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :question, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :SAnswer, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :SAnswer, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Answer2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Answer2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Answer3, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Answer3, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Answer4, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Answer4, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Long, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Long, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :lat, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lat, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                qrcodes_path, :class => 'btn' %>
  </div>
<% end %>
